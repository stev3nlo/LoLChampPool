<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context="com.example.steven.lolchamppool.AddGameInfo"
                android:id="@+id/AddGameInfo">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/champ"
        android:text="Champion Played"
        />

    <Spinner
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/AllChamps"
        android:spinnerMode="dropdown"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/role"
        android:text="Role Played"
        />

    <Spinner
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/AllRoles"
        android:spinnerMode="dropdown"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="130dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/KDA"
        android:text="Kill/Death/Assits Ratio"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/NumDeaths"
        android:layout_toStartOf="@+id/slash1"
        android:gravity="right"
        android:textAlignment="gravity"
        android:id="@+id/NumKills"
        android:hint="     "
        android:maxLength="2"
        android:inputType="number"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/NumDeaths"
        android:layout_toStartOf="@+id/NumDeaths"
        android:id="@+id/slash1"
        android:text="/"
        android:textSize="24sp"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="145dp"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textAlignment="gravity"
        android:id="@+id/NumDeaths"
        android:hint="     "
        android:maxLength="2"
        android:inputType="number"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/NumDeaths"
        android:layout_toEndOf="@+id/NumDeaths"
        android:id="@+id/slash2"
        android:text="/"
        android:textSize="24sp"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/NumDeaths"
        android:layout_toEndOf="@+id/slash2"
        android:gravity="left"
        android:textAlignment="gravity"
        android:id="@+id/NumAssists"
        android:hint="     "
        android:maxLength="2"
        android:inputType="number"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="195dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/CS"
        android:text="Creep Score"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="215dp"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textAlignment="gravity"
        android:id="@+id/CreepScore"
        android:hint="      "
        android:maxLength="3"
        android:inputType="number"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="265dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/TimeStamp"
        android:text="Game Duration"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="285dp"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textAlignment="gravity"
        android:id="@+id/colon"
        android:text=":"
        android:textSize="24sp"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/colon"
        android:layout_toStartOf="@+id/colon"
        android:id="@+id/Mins"
        android:hint="00"
        android:maxLength="2"
        android:inputType="number"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/colon"
        android:layout_toEndOf="@+id/colon"
        android:id="@+id/Secs"
        android:hint="00"
        android:maxLength="2"
        android:inputType="number"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="350dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/AddGame"
        android:text="Add Game"

        />

</RelativeLayout>
